{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "BanglaCode",
  "patterns": [
    { "include": "#comments" },
    { "include": "#imports" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#control-flow" },
    { "include": "#operators" },
    { "include": "#builtins" },
    { "include": "#functions" },
    { "include": "#classes" },
    { "include": "#variables" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "imports": {
      "patterns": [
        {
          "name": "meta.import.js",
          "match": "(ano)\\s+(\"[^\"]+\")(?:\\s+(hisabe)\\s+([a-zA-Z_][a-zA-Z0-9_]*))?",
          "captures": {
            "1": { "name": "keyword.control.import.js" },
            "2": { "name": "string.quoted.double.js" },
            "3": { "name": "keyword.control.import.js" },
            "4": { "name": "variable.other.readwrite.js" }
          }
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.block.documentation.js",
          "match": "//\\s*@comment\\s+.*$"
        },
        {
          "name": "comment.line.double-slash.js",
          "match": "//.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.js",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.js",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.js",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.js",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.decimal.js",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "storage.type.js",
          "match": "\\b(dhoro|sthir|bishwo)\\b"
        },
        {
          "name": "keyword.control.conditional.js",
          "match": "\\b(jodi|nahole)\\b"
        },
        {
          "name": "keyword.control.loop.js",
          "match": "\\b(jotokkhon|ghuriye|thamo|chharo)\\b"
        },
        {
          "name": "storage.type.function.js",
          "match": "\\b(kaj)\\b"
        },
        {
          "name": "keyword.control.flow.js",
          "match": "\\b(ferao)\\b"
        },
        {
          "name": "keyword.control.import.js",
          "match": "\\b(ano|pathao|hisabe)\\b"
        },
        {
          "name": "keyword.control.trycatch.js",
          "match": "\\b(chesta|dhoro_bhul|shesh|felo)\\b"
        },
        {
          "name": "storage.type.class.js",
          "match": "\\b(sreni)\\b"
        },
        {
          "name": "keyword.operator.new.js",
          "match": "\\b(notun)\\b"
        },
        {
          "name": "variable.language.this.js",
          "match": "\\b(ei)\\b"
        },
        {
          "name": "support.function.constructor.js",
          "match": "\\b(shuru)\\b"
        },
        {
          "name": "constant.language.boolean.js",
          "match": "\\b(sotti|mittha)\\b"
        },
        {
          "name": "constant.language.null.js",
          "match": "\\b(khali)\\b"
        },
        {
          "name": "keyword.operator.logical.js",
          "match": "\\b(ebong|ba|na)\\b"
        }
      ]
    },
    "control-flow": {
      "patterns": [
        {
          "name": "keyword.control.conditional.js",
          "match": "\\b(jodi|nahole)\\b"
        },
        {
          "name": "keyword.control.loop.js",
          "match": "\\b(jotokkhon|ghuriye|thamo|chharo)\\b"
        },
        {
          "name": "keyword.control.trycatch.js",
          "match": "\\b(chesta|dhoro_bhul|shesh|felo)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.spread.js",
          "match": "\\.\\.\\."
        },
        {
          "name": "keyword.operator.comparison.js",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.arithmetic.js",
          "match": "(\\+|\\-|\\*|\\/|%)"
        },
        {
          "name": "keyword.operator.assignment.js",
          "match": "="
        }
      ]
    },
    "builtins": {
      "patterns": [
        {
          "name": "support.function.console.js",
          "match": "\\b(dekho)\\b"
        },
        {
          "name": "support.function.js",
          "match": "\\b(dhoron|lipi|sonkha|dorghyo)\\b"
        },
        {
          "name": "support.function.js",
          "match": "\\b(boroHater|chotoHater|chhanto|bhag|joro|khojo|angsho|bodlo)\\b"
        },
        {
          "name": "support.function.js",
          "match": "\\b(dhokao|berKoro|kato|ulto|saja|ache|chabi)\\b"
        },
        {
          "name": "support.function.js",
          "match": "\\b(borgomul|ghat|niche|upore|kache|niratek|choto|boro|lotto)\\b"
        },
        {
          "name": "support.function.js",
          "match": "\\b(somoy|ghum|nao|bondho|poro|lekho)\\b"
        },
        {
          "name": "support.function.js",
          "match": "\\b(server_chalu|anun|uttor|json_uttor)\\b"
        },
        {
          "name": "support.function.js",
          "match": "\\b(json_poro|json_banao)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.js",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "classes": {
      "patterns": [
        {
          "name": "entity.name.type.class.js",
          "match": "(?<=sreni\\s+)[a-zA-Z_][a-zA-Z0-9_]*"
        },
        {
          "name": "entity.name.type.class.js",
          "match": "(?<=notun\\s+)[a-zA-Z_][a-zA-Z0-9_]*"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.readwrite.js",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.terminator.statement.js",
          "match": ";"
        },
        {
          "name": "punctuation.separator.comma.js",
          "match": ","
        },
        {
          "name": "meta.brace.curly.js",
          "match": "[{}]"
        },
        {
          "name": "meta.brace.round.js",
          "match": "[()]"
        },
        {
          "name": "meta.brace.square.js",
          "match": "[\\[\\]]"
        }
      ]
    }
  },
  "scopeName": "source.banglacode"
}
