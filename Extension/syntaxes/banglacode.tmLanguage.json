{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "BanglaCode",
  "patterns": [
    { "include": "#comments" },
    { "include": "#imports" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#control-flow" },
    { "include": "#operators" },
    { "include": "#builtins" },
    { "include": "#functions" },
    { "include": "#classes" },
    { "include": "#variables" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "imports": {
      "patterns": [
        {
          "name": "meta.import.banglacode",
          "match": "(ano)\\s+(\"[^\"]+\")(?:\\s+(hisabe)\\s+([a-zA-Z_][a-zA-Z0-9_]*))?",
          "captures": {
            "1": { "name": "keyword.control.import.banglacode" },
            "2": { "name": "string.quoted.module-path.banglacode" },
            "3": { "name": "keyword.control.as.banglacode" },
            "4": { "name": "variable.other.alias.banglacode" }
          }
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.block.documentation.banglacode",
          "match": "//\\s*@comment\\s+.*$"
        },
        {
          "name": "comment.line.double-slash.banglacode",
          "match": "//.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.banglacode",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.banglacode",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.banglacode",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.banglacode",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.banglacode",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.banglacode",
          "match": "\\b(dhoro|sthir|bishwo|jodi|nahole|jotokkhon|ghuriye|kaj|ferao|thamo|chharo|ano|pathao|hisabe|chesta|dhoro_bhul|shesh|felo)\\b"
        },
        {
          "name": "storage.type.constant.banglacode",
          "match": "\\b(sthir)\\b"
        },
        {
          "name": "storage.type.global.banglacode",
          "match": "\\b(bishwo)\\b"
        },
        {
          "name": "keyword.other.banglacode",
          "match": "\\b(sreni|notun|ei|shuru)\\b"
        },
        {
          "name": "constant.language.banglacode",
          "match": "\\b(sotti|mittha|khali)\\b"
        },
        {
          "name": "keyword.operator.logical.banglacode",
          "match": "\\b(ebong|ba|na)\\b"
        }
      ]
    },
    "control-flow": {
      "patterns": [
        {
          "name": "keyword.control.conditional.banglacode",
          "match": "\\b(jodi|nahole)\\b"
        },
        {
          "name": "keyword.control.loop.banglacode",
          "match": "\\b(jotokkhon|ghuriye|thamo|chharo)\\b"
        },
        {
          "name": "keyword.control.trycatch.banglacode",
          "match": "\\b(chesta|dhoro_bhul|shesh|felo)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.banglacode",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.arithmetic.banglacode",
          "match": "(\\+|\\-|\\*|\\/|%)"
        },
        {
          "name": "keyword.operator.assignment.banglacode",
          "match": "="
        }
      ]
    },
    "builtins": {
      "patterns": [
        {
          "name": "support.function.output.banglacode",
          "match": "\\b(dekho)\\b"
        },
        {
          "name": "support.function.type.banglacode",
          "match": "\\b(dhoron|lipi|sonkha|dorghyo)\\b"
        },
        {
          "name": "support.function.string.banglacode",
          "match": "\\b(boroHater|chotoHater|chhanto|bhag|joro|khojo|angsho|bodlo)\\b"
        },
        {
          "name": "support.function.array.banglacode",
          "match": "\\b(dhokao|berKoro|kato|ulto|saja|ache|chabi)\\b"
        },
        {
          "name": "support.function.math.banglacode",
          "match": "\\b(borgomul|ghat|niche|upore|kache|niratek|choto|boro|lotto)\\b"
        },
        {
          "name": "support.function.utility.banglacode",
          "match": "\\b(somoy|ghum|nao|bondho|poro|lekho)\\b"
        },
        {
          "name": "support.function.http.banglacode",
          "match": "\\b(server_chalu|anun|uttor|json_uttor)\\b"
        },
        {
          "name": "support.function.json.banglacode",
          "match": "\\b(json_poro|json_banao)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.banglacode",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "classes": {
      "patterns": [
        {
          "name": "entity.name.class.banglacode",
          "match": "(?<=sreni\\s+)[a-zA-Z_][a-zA-Z0-9_]*"
        },
        {
          "name": "entity.name.class.banglacode",
          "match": "(?<=notun\\s+)[a-zA-Z_][a-zA-Z0-9_]*"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.banglacode",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.terminator.statement.banglacode",
          "match": ";"
        },
        {
          "name": "punctuation.separator.comma.banglacode",
          "match": ","
        },
        {
          "name": "punctuation.definition.block.banglacode",
          "match": "[{}]"
        },
        {
          "name": "punctuation.definition.parameters.banglacode",
          "match": "[()]"
        },
        {
          "name": "punctuation.definition.array.banglacode",
          "match": "[\\[\\]]"
        }
      ]
    }
  },
  "scopeName": "source.banglacode"
}
