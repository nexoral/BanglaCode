{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "BanglaCode",
  "patterns": [
    { "include": "#comments" },
    { "include": "#imports" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#control-flow" },
    { "include": "#operators" },
    { "include": "#builtins" },
    { "include": "#functions" },
    { "include": "#classes" },
    { "include": "#variables" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "imports": {
      "patterns": [
        {
          "name": "meta.import.js",
          "match": "(ano)\\s+(\"[^\"]+\")(?:\\s+(hisabe)\\s+([a-zA-Z_][a-zA-Z0-9_]*))?",
          "captures": {
            "1": { "name": "keyword.control.import.js" },
            "2": { "name": "string.quoted.double.js" },
            "3": { "name": "keyword.control.import.js" },
            "4": { "name": "variable.other.readwrite.js" }
          }
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.block.documentation.js",
          "match": "//\\s*@comment\\s+.*$"
        },
        {
          "name": "comment.line.double-slash.js",
          "match": "//.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.js",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.js",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.js",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.js",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.template.js",
          "begin": "`",
          "end": "`",
          "patterns": [
            {
              "name": "meta.embedded.expression.js",
              "begin": "\\$\\{",
              "end": "\\}",
              "patterns": [
                {
                  "include": "$self"
                }
              ]
            },
            {
              "name": "constant.character.escape.js",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.decimal.js",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "storage.type.js",
          "match": "\\b(dhoro|sthir|bishwo)\\b"
        },
        {
          "name": "keyword.control.conditional.js",
          "match": "\\b(jodi|nahole)\\b"
        },
        {
          "name": "keyword.control.loop.js",
          "match": "\\b(jotokkhon|ghuriye|thamo|chharo|do|utpadan)\\b"
        },
        {
          "name": "storage.type.function.js",
          "match": "\\b(kaj)\\b"
        },
        {
          "name": "storage.type.accessor.js",
          "match": "\\b(pao|set)\\b"
        },
        {
          "name": "storage.modifier.async.js",
          "match": "\\b(proyash)\\b"
        },
        {
          "name": "keyword.control.flow.await.js",
          "match": "\\b(opekha)\\b"
        },
        {
          "name": "keyword.control.flow.js",
          "match": "\\b(ferao)\\b"
        },
        {
          "name": "keyword.control.import.js",
          "match": "\\b(ano|pathao|hisabe)\\b"
        },
        {
          "name": "keyword.control.trycatch.js",
          "match": "\\b(chesta|dhoro_bhul|shesh|felo)\\b"
        },
        {
          "name": "storage.type.class.js",
          "match": "\\b(sreni)\\b"
        },
        {
          "name": "keyword.operator.new.js",
          "match": "\\b(notun)\\b"
        },
        {
          "name": "variable.language.this.js",
          "match": "\\b(ei)\\b"
        },
        {
          "name": "support.function.constructor.js",
          "match": "\\b(shuru)\\b"
        },
        {
          "name": "constant.language.boolean.js",
          "match": "\\b(sotti|mittha)\\b"
        },
        {
          "name": "constant.language.null.js",
          "match": "\\b(khali)\\b"
        },
        {
          "name": "constant.language.js",
          "match": "\\b(MATH_PI|MATH_E|MATH_LN2|MATH_LN10|MATH_LOG2E|MATH_LOG10E|MATH_SQRT1_2|MATH_SQRT2|PATH_SEP|PATH_DELIMITER|NUMBER_MAX_SAFE_INTEGER|NUMBER_MIN_SAFE_INTEGER|NUMBER_MAX_VALUE|NUMBER_MIN_VALUE|NUMBER_POSITIVE_INFINITY|NUMBER_NEGATIVE_INFINITY|NUMBER_EPSILON|NUMBER_NAN)\\b"
        },
        {
          "name": "keyword.operator.logical.js",
          "match": "\\b(ebong|ba|na)\\b"
        },
        {
          "name": "keyword.operator.js",
          "match": "\\b(in|of|instanceof|delete)\\b"
        },
        {
          "name": "keyword.control.switch.js",
          "match": "\\b(bikolpo|khetre|manchito)\\b"
        }
      ]
    },
    "control-flow": {
      "patterns": [
        {
          "name": "keyword.control.conditional.js",
          "match": "\\b(jodi|nahole)\\b"
        },
        {
          "name": "keyword.control.loop.js",
          "match": "\\b(jotokkhon|ghuriye|thamo|chharo|do|utpadan)\\b"
        },
        {
          "name": "keyword.control.trycatch.js",
          "match": "\\b(chesta|dhoro_bhul|shesh|felo)\\b"
        },
        {
          "name": "keyword.control.switch.js",
          "match": "\\b(bikolpo|khetre|manchito)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.spread.js",
          "match": "\\.\\.\\."
        },
        {
          "name": "keyword.operator.comparison.js",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.arithmetic.js",
          "match": "(\\+|\\-|\\*|\\/|%)"
        },
        {
          "name": "keyword.operator.assignment.js",
          "match": "="
        },
        {
          "name": "keyword.operator.arrow.js",
          "match": "=>"
        }
      ]
    },
    "builtins": {
      "patterns": [
        {
          "name": "support.function.console.js",
          "match": "\\b(dekho)\\b"
        },
        {
          "name": "support.function.js",
          "match": "\\b(dhoron|lipi|sonkha|dorghyo)\\b"
        },
        {
          "name": "support.function.js",
          "match": "\\b(purno_sonkhya|doshomik_sonkhya|sonkhya_na|sonkhya_shimito|sonkhya_sesh|sonkhya_purno|sonkhya_na_check|sonkhya_nirapod|uri_encode|uri_decode|uri_ongsho_encode|uri_ongsho_decode)\\b"
        },
        {
          "name": "support.function.js",
          "match": "\\b(tarikh_ekhon|tarikh_parse|tarikh_format|regex_test|regex_match|regex_match_all|regex_search|regex_replace|match|matchAll|search)\\b"
        },
        {
          "name": "support.function.array.js",
          "match": "\\b(manchitro|chhanno|sonkuchito|proti)\\b"
        },
        {
          "name": "support.function.array.js",
          "match": "\\b(khojo_prothom|khojo_index|khojo_shesh|khojo_shesh_index|prottek|kono|somtol_manchitro|array_at|shesh_index_of|joro_array|somtol|sonkuchito_dan)\\b"
        },
        {
          "name": "support.function.object.js",
          "match": "\\b(maan|jora|mishra|nijer_ache|jora_theke|ekoi_ki|notun_map|joma)\\b"
        },
        {
          "name": "support.function.js",
          "match": "\\b(boroHater|chotoHater|chhanto|bhag|joro|khojo|angsho|bodlo)\\b"
        },
        {
          "name": "support.function.js",
          "match": "\\b(ache_text|shuru_diye|shesh_diye|baro|agey_bhoro|pichoney_bhoro|okkhor|text_at|okkhor_code|codepoint_at|tulona_text|shadharon_text|chhanto_shuru|chhanto_shesh|shesh_khojo)\\b"
        },
        {
          "name": "support.function.js",
          "match": "\\b(dhokao|berKoro|kato|ulto|saja|ache|chabi)\\b"
        },
        {
          "name": "support.function.js",
          "match": "\\b(borgomul|ghat|niche|upore|kache|niratek|choto|boro|lotto)\\b"
        },
        {
          "name": "support.function.js",
          "match": "\\b(somoy|ghum|nao|bondho|poro|lekho|setTimeout|setInterval|clearTimeout|clearInterval)\\b"
        },
        {
          "name": "support.function.builtin.file.js",
          "match": "\\b(file_jog|file_mochho|file_nokol|folder_mochho|file_dekhun|file_dekhun_bondho)\\b"
        },
        {
          "name": "support.function.js",
          "match": "\\b(server_chalu|router_banao|anun|uttor|json_uttor)\\b"
        },
        {
          "name": "support.function.builtin.network.js",
          "match": "\\b(tcp_server_chalu|tcp_jukto|tcp_pathao|tcp_lekho|tcp_shuno|tcp_bondho)\\b"
        },
        {
          "name": "support.function.builtin.network.js",
          "match": "\\b(udp_server_chalu|udp_pathao|udp_uttor|udp_shuno|udp_bondho)\\b"
        },
        {
          "name": "support.function.builtin.network.js",
          "match": "\\b(websocket_server_chalu|websocket_jukto|websocket_pathao|websocket_bondho)\\b"
        },
        {
          "name": "support.function.js",
          "match": "\\b(json_poro|json_banao)\\b"
        },
        {
          "name": "support.function.builtin.async.js",
          "match": "\\b(ghumaao|anun_async|poro_async|lekho_async|sob_proyash)\\b"
        },
        {
          "name": "support.function.builtin.events.js",
          "match": "\\b(ghotona_srishti|ghotona_shuno|ghotona_ekbar|ghotona_prokash|ghotona_bondho|ghotona_sob_bondho|ghotona_shrotara|ghotona_naam_sob)\\b"
        },
        {
          "name": "support.class.error.js",
          "match": "\\b(Error|TypeError|ReferenceError|RangeError|SyntaxError)\\b"
        },
        {
          "name": "support.function.builtin.error.js",
          "match": "\\b(bhul_message|bhul_stack|bhul_naam|is_error)\\b"
        },
        {
          "name": "support.function.builtin.buffer.js",
          "match": "\\b(buffer_banao|buffer_theke|buffer_joro|buffer_text|buffer_lekho|buffer_angsho|buffer_tulona|buffer_hex|buffer_copy)\\b"
        },
        {
          "name": "support.function.builtin.worker.js",
          "match": "\\b(kaj_kormi_srishti|kaj_kormi_pathao|kaj_kormi_bondho|kaj_kormi_shuno|kaj_kormi_tothya|pathao_message)\\b"
        },
        {
          "name": "support.function.builtin.streams.js",
          "match": "\\b(stream_readable_srishti|stream_writable_srishti|stream_poro|stream_lekho|stream_bondho|stream_shesh|stream_pipe|stream_on)\\b"
        },
        {
          "name": "support.function.builtin.url.js",
          "match": "\\b(url_parse|url_query_params|url_query_get|url_query_set|url_query_append|url_query_delete|url_query_has|url_query_keys|url_query_values|url_query_toString)\\b"
        },
        {
          "name": "support.function.builtin.set.js",
          "match": "\\b(set_srishti|set_add|set_has|set_delete|set_clear|set_akar|set_values|set_foreach)\\b"
        },
        {
          "name": "support.function.builtin.map.js",
          "match": "\\b(map_srishti|map_set|map_get|map_has|map_delete|map_clear|map_akar|map_keys|map_values|map_entries|map_foreach)\\b"
        },
        {
          "name": "support.function.builtin.system.js",
          "match": "\\b(chalan|poribesh|poribesh_set|poribesh_shokal|poribesh_muke)\\b"
        },
        {
          "name": "support.function.builtin.system.js",
          "match": "\\b(kaj_directory|kaj_directory_bodol|process_id|process_args|process_ghum|process_maro|process_signal)\\b"
        },
        {
          "name": "support.function.builtin.system.js",
          "match": "\\b(process_ache_ki|process_parent_id|process_chalu|process_opekha)\\b"
        },
        {
          "name": "support.function.builtin.system.js",
          "match": "\\b(os_naam|bibhag|hostname|cpu_sonkha)\\b"
        },
        {
          "name": "support.function.builtin.system.js",
          "match": "\\b(bebosthok_naam|bari_directory)\\b"
        },
        {
          "name": "support.function.builtin.system.js",
          "match": "\\b(ache_ki|folder_banao|folder_banao_shokal|muke_felo)\\b"
        },
        {
          "name": "support.function.builtin.system.js",
          "match": "\\b(path_joro|sompurno_path|path_naam|directory_naam|file_ext|path_bichchhed|path_match|path_resolve|path_normalize|path_relative)\\b"
        },
        {
          "name": "support.function.builtin.system.js",
          "match": "\\b(file_akar|file_permission|file_permission_set|file_malikan|file_malikan_set)\\b"
        },
        {
          "name": "support.function.builtin.system.js",
          "match": "\\b(file_shomoy_tori|file_shomoy_poribortito|file_shomoy_access|file_dhoron|file_rename)\\b"
        },
        {
          "name": "support.function.builtin.system.js",
          "match": "\\b(directory_taliika|directory_ghumao|directory_khali_ki|directory_akar)\\b"
        },
        {
          "name": "support.function.builtin.system.js",
          "match": "\\b(temp_directory|temp_file|temp_folder|temp_path|temp_muche_felo)\\b"
        },
        {
          "name": "support.function.builtin.system.js",
          "match": "\\b(symlink_banao|symlink_poro|symlink_ki|hardlink_banao|link_sonkha)\\b"
        },
        {
          "name": "support.function.builtin.system.js",
          "match": "\\b(shomoy_ekhon|shomoy_format|shomoy_parse|uptime|boot_shomoy|timezone)\\b"
        },
        {
          "name": "support.function.builtin.system.js",
          "match": "\\b(network_interface|ip_address|ip_shokal|mac_address|network_gateway|dns_server)\\b"
        },
        {
          "name": "support.function.builtin.system.js",
          "match": "\\b(memory_total|memory_bebohrito|memory_mukt|cpu_bebohrito)\\b"
        },
        {
          "name": "support.function.builtin.system.js",
          "match": "\\b(disk_akar|disk_bebohrito|disk_mukt)\\b"
        },
        {
          "name": "support.function.builtin.env.js",
          "match": "\\b(env_load|env_load_auto|env_get|env_get_default|env_set|env_all|env_clear)\\b"
        },
        {
          "name": "support.function.builtin.database.js",
          "match": "\\b(db_jukto|db_jukto_async|db_bandho|db_bandho_async)\\b"
        },
        {
          "name": "support.function.builtin.database.js",
          "match": "\\b(db_query|db_query_async|db_exec|db_exec_async|db_proshno|db_proshno_async)\\b"
        },
        {
          "name": "support.function.builtin.database.postgres.js",
          "match": "\\b(db_jukto_postgres|db_bandho_postgres|db_query_postgres|db_exec_postgres|db_proshno_postgres)\\b"
        },
        {
          "name": "support.function.builtin.database.postgres.js",
          "match": "\\b(db_query_async_postgres|db_exec_async_postgres|db_proshno_async_postgres)\\b"
        },
        {
          "name": "support.function.builtin.database.postgres.js",
          "match": "\\b(db_transaction_shuru_postgres|db_commit_postgres|db_rollback_postgres)\\b"
        },
        {
          "name": "support.function.builtin.database.mysql.js",
          "match": "\\b(db_jukto_mysql|db_bandho_mysql|db_query_mysql|db_exec_mysql|db_proshno_mysql)\\b"
        },
        {
          "name": "support.function.builtin.database.mysql.js",
          "match": "\\b(db_query_async_mysql|db_exec_async_mysql|db_proshno_async_mysql)\\b"
        },
        {
          "name": "support.function.builtin.database.mysql.js",
          "match": "\\b(db_transaction_shuru_mysql|db_commit_mysql|db_rollback_mysql)\\b"
        },
        {
          "name": "support.function.builtin.database.mongodb.js",
          "match": "\\b(db_jukto_mongodb|db_bandho_mongodb|db_khojo_mongodb|db_dhokao_mongodb)\\b"
        },
        {
          "name": "support.function.builtin.database.mongodb.js",
          "match": "\\b(db_update_mongodb|db_mujhe_mongodb|db_khojo_async_mongodb|db_dhokao_async_mongodb)\\b"
        },
        {
          "name": "support.function.builtin.database.mongodb.js",
          "match": "\\b(db_update_async_mongodb|db_mujhe_async_mongodb)\\b"
        },
        {
          "name": "support.function.builtin.database.redis.js",
          "match": "\\b(db_jukto_redis|db_bandho_redis|db_set_redis|db_get_redis|db_del_redis|db_expire_redis)\\b"
        },
        {
          "name": "support.function.builtin.database.redis.js",
          "match": "\\b(db_set_async_redis|db_get_async_redis|db_lpush_redis|db_rpush_redis|db_lpop_redis|db_rpop_redis)\\b"
        },
        {
          "name": "support.function.builtin.database.redis.js",
          "match": "\\b(db_hset_redis|db_hget_redis|db_hgetall_redis)\\b"
        },
        {
          "name": "support.function.builtin.database.pool.js",
          "match": "\\b(db_pool_banao|db_pool_nao|db_pool_ferot|db_pool_bondho|db_pool_tothyo)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.js",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "classes": {
      "patterns": [
        {
          "name": "entity.name.type.class.js",
          "match": "(?<=sreni\\s+)[a-zA-Z_][a-zA-Z0-9_]*"
        },
        {
          "name": "entity.name.type.class.js",
          "match": "(?<=notun\\s+)[a-zA-Z_][a-zA-Z0-9_]*"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.readwrite.js",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.terminator.statement.js",
          "match": ";"
        },
        {
          "name": "punctuation.separator.comma.js",
          "match": ","
        },
        {
          "name": "meta.brace.curly.js",
          "match": "[{}]"
        },
        {
          "name": "meta.brace.round.js",
          "match": "[()]"
        },
        {
          "name": "meta.brace.square.js",
          "match": "[\\[\\]]"
        }
      ]
    }
  },
  "scopeName": "source.banglacode"
}
