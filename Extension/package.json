{
  "name": "banglacode",
  "displayName": "BanglaCode",
  "description": "Language support for BanglaCode - Bengali Programming Language created by Ankan from West Bengal, India",
  "version": "6.0.0",
  "publisher": "AnkanSaha",
  "author": {
    "name": "AnkanSaha"
  },
  "license": "MIT",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/nexoral/BanglaCode.git",
    "directory": "Extension"
  },
  "bugs": {
    "url": "https://github.com/nexoral/BanglaCode/issues"
  },
  "homepage": "https://github.com/nexoral/BanglaCode#readme",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "banglacode",
    "bengali",
    "banglish",
    "bangla",
    "বাংলা",
    "programming language",
    "west bengal",
    "india",
    "syntax highlighting",
    "language support",
    "bengali programming",
    "native language coding",
    "indian programming language",
    "regional language",
    "code snippets",
    "autocomplete",
    "intellisense",
    "bengali keywords",
    "বাংলা কোড",
    "south asian languages"
  ],
  "main": "./extension.js",
  "contributes": {
    "languages": [
      {
        "id": "banglacode",
        "aliases": [
          "BanglaCode",
          "banglacode",
          "bang"
        ],
        "extensions": [
          ".bang"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./images/bang-icon.svg",
          "dark": "./images/bang-icon.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "banglacode",
        "scopeName": "source.banglacode",
        "path": "./syntaxes/banglacode.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "banglacode",
        "path": "./snippets/banglacode.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "echo 'Ready to publish'",
    "package": "npx @vscode/vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@vscode/vsce": "^3.7.1"
  }
}
